<div class="row">
    <div class="box">
        <div class="box__header">
            <h3 class="box__header--title">Centro de mensajes</h3>
        </div>
        <form id="box__form" class="mt-3">
            <div class="row g-3">
                <div class="col-12">
                    <input type="email" id="email" placeholder="Email" class="form-control fs-5 lead" required />
                </div>
                <div class="col-12">
                    <input type="text" id="text" placeholder="Mensaje" class="form-control fs-5 lead">
                </div>
                <div class="input-group-btn">
                    <button type="submit" class="btn btn-lg btn-dark bg-gradient mt-2 mb-3">Enviar</button>
                </div>
            </div>
        </form>
        <div class="box__messages">
            <div id="messages" class="box__messages__chat"></div>
        </div>
    </div>
</div>   