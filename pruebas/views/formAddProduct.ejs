<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
  <title>Form - producto nuevo</title>
</head>

<body>
  <!-- Sección del form para agregar un producto nuevo -->
  <section>
    <h1 class="display-2 text-dark text-center bg-light p-3 mb-5">Agrega un producto nuevo</h1>
    <div class="container mb-3">
      <div class="row justify-content-center">
        <div class="col-lg-8 col-md-9 col-12">
          <h2 class="display-5 fs-3 bg-dark bg-gradient text-white text-center rounded p-3 mb-5">Agrega productos
            completando los tres campos</h2>
          <!-- form para agregar productos -->
          <form action="/productCreated" method="post" class="row g-3 bg-light p-3 rounded">
            <!-- <form action="/api/products" method="post" class="row g-3 bg-light p-3 rounded"> -->
            <div class="col-12 col-md-8">
              <label for="title" class="form-label lead fs-2">Title</label>
              <input type="text" name="title" id="title" placeholder="Title" class="form-control" maxlength="30"
                required />
            </div>
            <div class="col-12 col-md-4">
              <label for="price" class="form-label lead fs-2">Price</label>
              <input type="number" name="price" id="price" placeholder="Price" class="form-control" min="0" max="999999"
                maxlength="6"
                oninput="if(this.value.length > this.maxLength) this.value = this.value.slice(0, this.maxLength)"
                pattern="^[1-9]\d*$" required />
            </div>
            <div class="col-12">
              <label for="thumbnail" class="form-label lead fs-2">Thumbnail</label>
              <input type="text" name="thumbnail" id="thumbnail" placeholder="Thumbnail" class="form-control"
                maxlength="150" required />
            </div>
            <div class="justify-content-center">
              <button type="submit" class="btn btn-lg btn-danger bg-gradient col-12 col-md-6 col-lg-3">Guardar</button>
            </div>
          </form>
          <!-- <div class="d-flex justify-content-center align-items-center">
                  <a href="/" class="btn btn-lg btn-danger bg-gradient col-12 col-md-6 col-lg-3 mt-4">Ir a productos</a>
              </div> -->
        </div>
      </div>
    </div>
    </div>
  </section>
  <!-- Fin sección del form para agregar un producto nuevo -->

  <!-- Sección de todos los productos -->
  <section>
    <h2 class="display-4 text-dark text-center bg-light p-3 mb-5">Nuestros productos</h1>
      <div class="container">
        <div class="table-responsive">
          <table class="table table-dark table-hover table-sm table-bordered">
            <caption class="fs-3">Stock de productos</caption>
            <thead>
              <tr class="text-center">
                <th class="fs-1 lead">Nombre</th>
                <th class="fs-1 lead">Precio</th>
                <th class="fs-1 lead">Foto</th>
              </tr>
            </thead>
            <tbody>
              <% products.forEach(function(product){ %>
              <tr class="table-light text-center">
                <td class="fs-3 lead"><%= product.title %></td>
                <td class="fs-3 lead">$<%= product.price %></td>
                <td><img class="w-25 img-fluid" src="<%= product.thumbnail %>"</td>
              </tr>
              <% }); %>
